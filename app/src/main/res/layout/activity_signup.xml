<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#188FCF"
    android:layout_height="match_parent"
    tools:context=".signup"
    android:id="@+id/signUpScreen">
    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100sp"
        android:shadowColor="#ff5500"
        android:text="@string/app_name"
        android:textColor="#e6b121"
        android:textSize="50sp">

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textColor="@color/teal_200"
        android:shadowColor="#ff5500"
        android:textSize="30sp"
        android:layout_below="@id/app_name"
        android:layout_centerHorizontal="true"
        android:id="@+id/signUpText">
    </TextView>
    <TextView
        android:id="@+id/signUpNoficationTextView"
        android:layout_below="@+id/signUpText"
        android:layout_width="300dp"
        android:layout_centerInParent="true"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textAlignment="center">
    </TextView>
    <LinearLayout
        android:id="@+id/userNameSignUpLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signUpNoficationTextView"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/userNameSignUpEditText"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/border"
            android:hint="Email"
            android:textSize="20dp">
        </EditText>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/passwordSignUpLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userNameSignUpLinearLayout"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/passwordSignUpEditText"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/border"
            android:hint="Password"
            android:textSize="20dp">
        </EditText>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/re_passwordSignUpLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordSignUpLinearLayout"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/re_passwordSignUpEditText"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="@drawable/border"
            android:hint="Confirm Password"
            android:textSize="20dp"
            android:inputType="textPassword">
        </EditText>

    </LinearLayout>
    <Button
        android:id="@+id/signUpScreenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_below="@id/re_passwordSignUpLinearLayout"
        android:layout_alignEnd="@id/re_passwordSignUpLinearLayout"
        android:layout_marginTop="15sp">

    </Button>

    <ImageView
        android:layout_width="358dp"
        android:layout_height="269dp"
        android:layout_below="@id/signUpScreenButton"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo">

    </ImageView>
</RelativeLayout>